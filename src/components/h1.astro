---
import clsx from "clsx/lite";

type Props = {
    className?: string;
    size?: "default" | "large";
}

const { size = "default", className } = Astro.props;
---

<h1
    class={clsx(
        "text-white text-balance font-serif",
        size === "default" && "text-4xl md:text-6xl xl:text-8xl tracking-tight",
        size === "large" && "text-6xl md:text-[120px] lg:text-[160px] tracking-tight",
        className,
    )}
>
    <slot />
</h1>
