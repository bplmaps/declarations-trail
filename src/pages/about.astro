---
import H1 from "../components/h1.astro";
import InfoLayout from "../layouts/InfoLayout.astro";
import { Image } from 'astro:assets';
import MHSLogo from "../assets/mhs_logo.jpg";
import LMECLogo from "../assets/MapCenter_allwhite.png";
---

<InfoLayout>
     <div class="p-4 sm:pt-8 sm:px-12 pb-20 min-h-dvh flex flex-col justify-between gap-32">
          <div class="space-y-4 sm:space-y-12">
               <H1> About this initiative </H1>

               <p class="text-xl xl:text-2xl text-zinc-500 text-balance">
                    The <strong>Declarations Trail</strong> TKTK
               </p>
          </div>

          <div class="space-y-2 text-base sm:text-lg">
               <h2 class="px-4 text-zinc-400 underline underline-offset-4 decoration-zinc-500">Produced by</h2>

               <ul class="px-4 text-zinc-400 list-disc list-outside">
                    <li>Leventhal Map & Education Center at the Boston Public Library</li>
                    <li>Boston Public Library</li>
                    <li>Massachusetts Historical Society</li>
                    <li>Boston Athenaeum</li>
                    <li>Harvard University Libraries</li>
               </ul>

               <p class="text-zinc-400">For more information, please contact TKTK</p>
               <div class="flex items-center gap-2 w-full justify-start h-16">
                    <Image
                      src={MHSLogo}
                      alt="Massachusetts Historical Society"
                      class="h-full w-auto flex-1 object-contain"
                    />
                    <Image
                      src={LMECLogo}
                      alt="Leventhal Map & Education Center"
                      class="h-full w-auto flex-1 object-contain"
                    />
                    <div class="flex-1"></div>
               </div>
          </div>
     </div>
</InfoLayout>
